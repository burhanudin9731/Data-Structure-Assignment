 Traversal:
#include <stdio.h>

void traverse(int arr[], int n) {
    for(int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
}

int main() {
    int arr[] = {10, 20, 30, 40};
    int n = 4;

    traverse(arr, n);
    return 0;
}
Insertion: 
#include <stdio.h>

void insert(int arr[], int *n, int pos, int value) {
    for(int i = *n; i > pos; i--) {
        arr[i] = arr[i - 1];
    }
    arr[pos] = value;
    (*n)++;
}

int main() {
    int arr[10] = {10, 20, 30, 40};
    int n = 4;

    insert(arr, &n, 2, 25);

    for(int i = 0; i < n; i++)
        printf("%d ", arr[i]);
}
deletion:

#include <stdio.h>

void delete(int arr[], int *n, int pos) {
    for(int i = pos; i < *n - 1; i++) {
        arr[i] = arr[i + 1];
    }
    (*n)--;
}

int main() {
    int arr[] = {10, 20, 25, 30, 40};
    int n = 5;

    delete(arr, &n, 2);

    for(int i = 0; i < n; i++)
        printf("%d ", arr[i]);
}
